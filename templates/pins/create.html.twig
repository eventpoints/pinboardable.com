{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center g-3">
            <div class="col-12 col-md-6">
                <div class="fs-3 my-3">{{ 'create-pin'|trans }}</div>
                <div class="card">
                    {{ form_start(pinForm) }}
                    <div class="card-body vstack gap-3">
                        {{ form_row(pinForm.title) }}
                        {{ form_row(pinForm.description) }}
                        {{ form_row(pinForm.url) }}
                        {{ form_row(pinForm.pinTypeEnum) }}
                        {{ form_row(pinForm.email) }}
                        <div class="text-end">
                            <button class="btn btn-primary" type="submit">{{ 'pin'|trans }}</button>
                        </div>
                    </div>
                    {{ form_end(pinForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}